<%= form_for(@wrangling_guideline, html: { class: "post" }) do |f| %>

  <%= error_messages_for @wrangling_guideline %>

  <p class="required notice"><%= t("wrangling_guidelines.required_information") %></p>
  <dl>

    <dt class="required"><%= f.label :title, "#{t('wrangling_guidelines.title')}*" %></dt>
    <dd>
      <%= f.text_field :title %>
      <%= live_validation_for_field("wrangling_guideline_title", failureMessage: t("wrangling_guidelines.title_failure")) %>
    </dd>

    <dt class="required"><%= f.label :content, t("wrangling_guidelines.guideline_text"), for: "content" %></dt>
    <dd class="required">
      <ul class="hidden rtf-html-switch actions" role="menu">
        <li><a class="rtf-link" href="#"><%= t("wrangling_guidelines.rich_text") %></a></li>
        <li><a class="html-link" href="#"><%= t("wrangling_guidelines.html") %></a></li>
      </ul>
      <p class="rtf-html-instructions note">
        <span class="html-notes"><%= allowed_html_instructions %></span>
        <span class="hidden rtf-notes"><%= t("wrangling_guidelines.rich_text_notes") %><%= link_to_help("rte-help") %></span>
      </p>
      <% use_tinymce %>
      <div class="rtf-html-field">
        <%= f.text_area :content, class: "mce-editor observe_textlength", id: "content" %>
        <%= live_validation_for_field("content",
              maximum_length: ArchiveConfig.CONTENT_MAX,
              minimum_length: ArchiveConfig.CONTENT_MIN,
              tooLongMessage: t("wrangling_guidelines.content_too_long", max: ArchiveConfig.CONTENT_MAX.to_s),
              tooShortMessage: t("wrangling_guidelines.brevity_content_min", min: ArchiveConfig.CONTENT_MIN.to_s),
              failureMessage: t("wrangling_guidelines.content_required")) %>
        <%= generate_countdown_html("content", ArchiveConfig.CONTENT_MAX) %>
      </div>
    </dd>

    <dt class="landmark"><%= t("wrangling_guidelines.post") %></dt>
    <dd class="submit actions">
      <%= submit_tag t("wrangling_guidelines.post"), name: "post_button" %>
    </dd>

  </dl>
<% end %>
